{
	"name": "@sapphire/docusaurus-plugin-ts2esm2cjs",
	"version": "2.0.2",
	"description": "Docusaurus Remark plugin for converting TypeScript code to ESM and CJS code",
	"author": "@sapphire",
	"license": "MIT",
	"main": "dist/cjs/index.cjs",
	"module": "dist/esm/index.mjs",
	"types": "dist/cjs/index.d.cts",
	"exports": {
		"import": {
			"types": "./dist/esm/index.d.mts",
			"default": "./dist/esm/index.mjs"
		},
		"require": {
			"types": "./dist/cjs/index.d.cts",
			"default": "./dist/cjs/index.cjs"
		}
	},
	"sideEffects": false,
	"scripts": {
		"lint": "eslint src --ext ts --fix",
		"build": "tsup && yarn build:rename-cjs-index",
		"build:rename-cjs-index": "node ../../scripts/rename-cjs-index.mjs",
		"typecheck": "tsc -p tsconfig.eslint.json",
		"prepack": "yarn build",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"test": "vitest run"
	},
	"dependencies": {
		"@prettier/sync": "^0.5.2",
		"esm-to-cjs": "^1.2.1",
		"mdast-util-mdx": "^3.0.0",
		"typescript": "~5.4.5",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/documentation-plugins.git",
		"directory": "packages/ts2esm2cjs"
	},
	"files": [
		"dist/",
		"!dist/.tsbuildinfo"
	],
	"engines": {
		"node": ">=18.0"
	},
	"keywords": [
		"docusaurus",
		"docusaurus-plugin",
		"@sapphire",
		"typescript",
		"ts",
		"esm",
		"cjs",
		"discord",
		"sapphire",
		"discordjs"
	],
	"bugs": {
		"url": "https://github.com/sapphiredev/documentation-plugins/issues"
	},
	"homepage": "https://www.sapphirejs.dev",
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@favware/cliff-jumper": "^5.0.0",
		"@sapphire/framework": "^5.3.1",
		"tsup": "^8.3.5",
		"vitest": "^2.1.8"
	}
}
